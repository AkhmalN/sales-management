{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",

    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
